<Application x:Class="PayBay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="using:PayBay.ViewModel"
             RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>

            <viewModel:ViewModelLocator x:Key="Locator" />

			<Color x:Key="Color1">#FF006666</Color>
			<Color x:Key="Color2">White</Color>
			<Color x:Key="Color3">Black</Color>

            <SolidColorBrush x:Key="Brush1" Color="{StaticResource Color1}" />
            <SolidColorBrush x:Key="Brush2" Color="{StaticResource Color2}" />
			<SolidColorBrush x:Key="Brush3" Color="{StaticResource Color3}" />

		</ResourceDictionary>

    </Application.Resources>

</Application>
