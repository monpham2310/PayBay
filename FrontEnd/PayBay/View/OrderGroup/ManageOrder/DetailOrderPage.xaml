<Page
    x:Class="PayBay.View.OrderGroup.ManageOrder.DetailOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PayBay.View.OrderGroup.ManageOrder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Source={StaticResource Locator}, Path=OrderVm}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="itemListDetailOrder">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        BorderThickness="2,2,2,2"    
                        Margin="0,5,0,5"
                        BorderBrush="{StaticResource LightBlueBrush}">
                <Image Source="{Binding Image}" 
                       Width="107" 
                       Height="63" 
                       Stretch="Fill"/>
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Stretch"
                            Width="280"
							Margin="20,0">
                    <TextBlock Text="{Binding ProductName}"
                               Foreground="{StaticResource LightBlueBrush}"/>
                    <TextBlock Text="{Binding NumberOf}"/>
                    <TextBlock Text="{Binding UnitPrice}"/>
                    <TextBlock Text="{Binding Unit}"/>                    
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
			  Background="{StaticResource LightBlueBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Name="tblTitle"
                       Text="Detail Order" 
					   Grid.Column="1"
					   FontSize="20"
					   FontWeight="Bold"
					   VerticalAlignment="Center"
					   Margin="10,0"
					   Foreground="{StaticResource WhiteBrush}"/>
        </Grid>
        <Grid Grid.Row="1">

            <Grid Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!--<RowDefinition Height="50" />-->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ScrollViewer Name="svDetailBill" 
                                Grid.Row="0"
                                Grid.ColumnSpan="2" 
                                HorizontalAlignment="Stretch"                                                                
                                >
                    <GridView x:Name="gvDetailBill"  
							    HorizontalAlignment="Center" 
                                VerticalAlignment="Top"                                      
                                ItemsSource="{Binding DetailBillList}"
                                ItemTemplate="{StaticResource itemListDetailOrder}"                                     
                                Background="White" 							    
                                >
                    </GridView>
                </ScrollViewer>

                <!--<Grid Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Background="{StaticResource WhiteBrush}"                         
                        Margin="10,0">
                    <Button x:Name="btnAddMarket" 
                    	    Height="51" 
                    	    Width="165" 
                    	    Foreground="{StaticResource WhiteBrush}"
						    Background="{StaticResource LightBlueBrush}"
                            Style="{StaticResource RoundedButtonStyle}"
                            HorizontalAlignment="Center"
                            Grid.Column="1"
                            FontSize="20"
                            Click="btnAddMarket_Click"
                            Content="Add Market">
                    </Button>
                </Grid>-->
            </Grid>

        </Grid>

    </Grid>
</Page>
